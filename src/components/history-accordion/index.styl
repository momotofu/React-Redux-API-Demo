@import url('http://weloveiconfonts.com/api/?family=entypo')
@import '../../styles/color'

/* entypo */
[class*="entypo-"]:before {
  font-family: 'entypo', sans-serif;
}


.Accordion
  &-container
    max-width 800px
    width 100%
    z-index 1
    color charcoal
    margin auto

  &-item
    position relative
    background white
    margin -1px
    &-description
      border 1px solid steel
      min-height 5rem
      padding 8px
      box-sizing border-box
      overflow hidden
      line-height 1.2
      transition padding .3s ease
      &-open
        padding-top 16rem
        max-height 100%

  &-item-tab
    transition background-color .3s ease
    align-items center
    background white
    border 1px solid steel
    box-sizing border-box
    display flex
    justify-content space-between
    min-height 5rem
    position absolute
    left 0
    top 0
    width 100%
    z-index 10
    &-label
      position relative
      display flex
      width 100%
      &-title
        color charcoal
        font-weight bold
        font-size 15px
        margin 2px 0  7px
        display flex
      &-sub
        opacity .7
        font-size 12px
      &-owner
        font-weight bold
      &:hover
        cursor pointer
    &-container
      display flex
      flex-direction column
    &-metrics
      display flex
    &-status
      text-align left
      min-width 72px
    &-metric
      margin-left 18px
      &-progress-bar
        height 18px
        position relative
        border 1px solid steel
        border-radius 2px
        padding 2px
        width 48px
        display flex
        align-items flex-end
        span
          display block
          height 100%
          border-radius 2px
          background-color lettuce
          width 100%
          box-shadow
            inset 0 2px 9px  rgba(255,255,255,0.3),
            inset 0 -2px 6px rgba(0,0,0,0.4)
          position relative
          overflow hidden

    &-signifier
      &-open
        -ms-transform rotate(-180deg)
        -webkit-transform rotate(-180deg)
        transform rotate(-180deg)
      &-container
        text-align center
        padding 1px 21px
        cursor default
        font-size 16px

    &-icon
      margin-right 2px
      text-align center
      width 18px
      display block
      &-container
        text-align center
        padding 1px 21px
        cursor default
        font-size 16px
        display flex
        align-items center
    &:hover
      cursor pointer
      background-color #f7fbfc
    &:active
      transition none
      background-color #F1F8F9
