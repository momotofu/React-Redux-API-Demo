@import url('http://weloveiconfonts.com/api/?family=entypo')
@import '../../styles/color'

/* entypo */
[class*="entypo-"]:before {
  font-family: 'entypo', sans-serif;
}


.Accordion
  &-container
    max-width 800px
    width 100%
    z-index 1
    color charcoal
    margin auto
    &-labels
      font-size 12px
      opacity .7
      margin 10px
      margin-left 62px
      display flex
      justify-content space-between
      font-weight bold
      &-metrics
        margin-right 52px
        &-label
          display inline-block
          min-width 54px
          margin-left 17px
          text-align center
          &:first-child
            margin-right 43px
  &-item
    position relative
    background white
    margin -1px
    &-description
      border 1px solid steel
      min-height 5rem
      padding 8px
      box-sizing border-box
      overflow hidden
      line-height 1.2
      transition padding .3s ease
      &-open
        padding-top 16rem
        max-height 100%

  &-item-tab
    transition background-color .3s ease
    align-items center
    background white
    border 1px solid steel
    box-sizing border-box
    display flex
    justify-content space-between
    min-height 5rem
    position absolute
    left 0
    top 0
    width 100%
    z-index 10
    &-label
      white-space nowrap
      overflow hidden
      position relative
      display flex
      width 100%
      &-title
        color charcoal
        font-weight bold
        font-size 15px
        margin 2px 0  7px
        display flex
      &-sub
        opacity .7
        font-size 12px
      &-owner
        font-weight bold
    &-container
      display flex
      flex-direction column
    &-metrics
      display flex
    &-status
      text-align center
      min-width 72px
      margin-right 36px
      margin-left 50px
      opacity .7
    &-metric
      margin-left 18px
      &-progress-bar
        background-color white
        height 18px
        position relative
        border 1px solid steel
        border-radius 2px
        padding 2px
        width 48px
        display flex
        align-items flex-end
        &-meter
          opacity .7
          display block
          height 100%
          border-radius 2px
          background-color lettuce
          width 100%
          box-shadow
            inset 0 2px 9px  rgba(255,255,255,0.3),
            inset 0 -2px 6px rgba(0,0,0,0.4)
          position relative
          overflow hidden
        &-failed
          span
            background-color electricity

    &-signifier
      &-open
        -ms-transform rotate(-180deg)
        -webkit-transform rotate(-180deg)
        transform rotate(-180deg)
      &-container
        text-align center
        padding 1px 24px
        cursor default
        font-size 16px
        &:hover
          cursor pointer

    &-status-icon
      &-pending
        animation spin 1s linear infinite
        display block
        padding 0 1px 1px 1px
        width 16px
        height 16px
        text-align center
        margin-left 1px
      &-dot-1, &-dot-2, &-dot-3, &-pending
        font-size 16px
      &-dot-1, &-dot-2, &-dot-3
        padding-right 1px
      &-dot-1
        animation dot .8s linear infinite
      &-dot-2
        animation dot .8s linear infinite
        animation-delay .3s
      &-dot-3
        animation dot .8s linear infinite
        animation-delay .6s

    &-icon
      margin-right 2px
      text-align center
      width 18px
      display block
      &-container
        text-align center
        padding 1px 21px
        cursor default
        font-size 16px
        display flex
        align-items center
    &:hover
      cursor pointer
      background-color glass
    &:active
      transition none
      background-color glassActive
    &-disabled
      justify-content flex-start
      opacity .7
      .Accordion-item-tab-status
        margin-right 360px
      &:hover, &:active
        background white
        cursor not-allowed

// animations
@keyframes spin
  100%
    transform rotate(360deg)

@keyframes dot
  100%
    opacity 0